{
  "name": "cidades-do-parana",
  "version": "0.0.1",
  "description": "Paran√° cities guessing game.",
  "main": "cities.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier \"{./,tests}/*.js\" --write",
    "dev": "rollup -c -w",
    "test:dev": "jest",
    "test": "jest --coverage --watchAll=false",
    "start": "sirv public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/cidades-do-parana.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/cidades-do-parana/issues"
  },
  "homepage": "https://github.com/jlozovei/cidades-do-parana#readme",
  "dependencies": {
    "sirv-cli": "^0.4.5",
    "svelte-spa-router": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "babel-jest": "^27.3.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^27.3.1",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.49.0",
    "svelte-jester": "^1.0.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run format"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageDirectory": "./coverage/",
    "transform": {
      "^.+\\.svelte$": "svelte-jester",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "testMatch": [
      "**/**/*.test.js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "prettier/prettier": "error"
    }
  }
}
